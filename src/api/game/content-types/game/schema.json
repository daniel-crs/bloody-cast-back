{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "singularName": "game",
    "pluralName": "games",
    "displayName": "Game"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "mainImg": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "tag": {
      "type": "string",
      "required": true,
      "default": "games"
    },
    "title": {
      "type": "string",
      "required": true
    },
    "descrition": {
      "type": "text",
      "required": true
    },
    "score": {
      "type": "float",
      "required": true,
      "max": 5,
      "min": 1
    },
    "date": {
      "type": "date",
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "destaque": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "richText": {
      "type": "blocks",
      "required": true
    }
  }
}
